<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record model="ir.module.category" id="module_category_products_management">
        <field name="name">Product</field>
        <field name="description">Help to manage products data</field>
        <field name="sequence">2</field>
    </record>
    <record id="group_product_update" model="res.groups">
        <field name="name">Can update products</field>
        <field name="category_id" ref="module_category_products_management"/>
        <field name="comment">Users can update products</field>
    </record>
    <record id="group_product_update_model_access" model="ir.model.access">
        <field name="name">[security] Can update products</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="group_id" eval="ref('group_product_update')"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="group_product_template_update_model_access" model="ir.model.access">
        <field name="name">[security] Can update products</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="group_id" eval="ref('group_product_update')"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    <record id="group_product_create" model="res.groups">
        <field name="name">Can create products</field>
        <field name="category_id" ref="module_category_products_management"/>
        <field name="implied_ids" eval="[(4, ref('security.group_product_update'))]"/>
        <field name="comment">Users can update products</field>
    </record>
    <record id="group_product_create_model_access" model="ir.model.access">
        <field name="name">[security] Can create products</field>
        <field name="model_id" ref="product.model_product_product"/>
        <field name="group_id" eval="ref('group_product_create')"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    <record id="group_product_template_create_model_access" model="ir.model.access">
        <field name="name">[security] Can create products</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="group_id" eval="ref('group_product_create')"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    <record id="group_product_price_history_create_model_access" model="ir.model.access">
        <field name="name">[security] Can create products</field>
        <field name="model_id" ref="product.model_product_price_history"/>
        <field name="group_id" eval="ref('group_product_create')"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>
