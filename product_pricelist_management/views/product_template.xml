<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='item_ids']" position="attributes">
                <attribute name="context">{'default_base':'list_price', 'default_applied_on': '1_product', 'default_product_tmpl_id': active_id}</attribute>
            </xpath>
            <xpath expr="//field[@name='item_ids']/tree/field[@name='fixed_price']" position="attributes">
                <attribute name="required">0</attribute>
            </xpath>
            <xpath expr="//field[@name='item_ids']/tree/field[@name='applied_on']" position="after">
                <button name="action_show_details" string="Show details" type="object" icon="fa-list" options='{"warn": true}'/>
            </xpath>
        </field>
    </record>
</odoo>
