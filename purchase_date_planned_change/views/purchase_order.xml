<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div/field[@name='date_planned']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'not in', ('draft', 'sent', 'to approve', 'purchase'))]}</attribute>
            </xpath>
            <xpath expr="//div/button[@name='action_set_date_planned']" position="attributes">
                <attribute name="states">draft,sent,to approve,purchase</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="decoration-danger">parent.date_planned &gt; date_planned</attribute>
                <attribute name="decoration-success">parent.date_planned &lt; date_planned</attribute>
            </xpath>
        </field>
    </record>
</odoo>
