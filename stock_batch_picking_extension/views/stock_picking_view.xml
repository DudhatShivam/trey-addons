<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_internal_search" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search/group" position="replace">
                <group expand="0" string="Group By">
                    <filter name="by_state" string="Status" domain="[]" context="{'group_by':'state'}"/>
                    <filter name="by_order_date" string="Order Date" domain="[]"  context="{'group_by':'date'}"/>
                    <filter name="by_scheduled_date" string="Expected Date" domain="[]"  context="{'group_by':'scheduled_date'}"/>
                    <filter name="by_origin" string="Origin" domain="[]" context="{'group_by':'origin'}"/>
                    <filter name="picking_type" string="Operation Type" domain="[]" context="{'group_by':'picking_type_id'}"/>
                    <filter name="by_procurement_group" string="Procurement Group" domain="[]" context="{'group_by':'group_id'}"/>
                </group>
            </xpath>
            <xpath expr="//filter[@name='late']" position="after">
                <filter name="no_batch" string="No Batch" domain="[('batch_picking_id','=',False)]"/>
            </xpath>
        </field>
    </record>
    <record id="vpicktree" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="printed"/>
            </field>
        </field>
    </record>
</odoo>
