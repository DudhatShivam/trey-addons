<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_customer_experience_settings']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box" id="sale_inactive_setting">
                    <div class="o_setting_right_pane">
                        <label string="Inactive Sale Setting"/>
                        <div class="text-muted">
                            Days from last sale
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label class="col-md-3 o_light_label" string="Inactive for"/>
                                <field name="sale_inactive_days"/> days
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
