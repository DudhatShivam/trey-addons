<?xml version="1.0"?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="is_default" attrs="{'invisible': [('company_type', '=', 'company')]}"/>
            </xpath>
            <xpath expr="//field[@name='child_ids']//kanban/field[@name='function']" position="after">
                <field name="is_default"/>
            </xpath>
            <xpath expr="//field[@name='child_ids']//kanban/templates//div[@class='o_kanban_image']" position="after">
               <span t-if="record.is_default.raw_value == true" class="fa fa-home pull-right"/>
            </xpath>
            <xpath expr="//field[@name='child_ids']//form/sheet//field[@name='name']" position="before">
                <field name="is_default"/>
            </xpath>
        </field>
    </record>
</odoo>
